def quadrado(l):
   '''Calcula area de um quadrado'''
   areaq = l**2
   return areaq

def retangulo(b,h):
   '''Calcula area de um retangulo'''
   arear = b*h
   return arear

def triangulo(b,h):
   '''Calcula area de um triangulo'''
   areat = (b*h)/2
   return areat

#Preciso melhorar essa parte do codigo.
'''

